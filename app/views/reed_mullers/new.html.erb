<% provide(:title, "Reed-Muller Parameters") %>

<%= render partial: 'shared/error_messages', 
  locals: {errors: @reed_muller.errors} %>

<%= simple_form_for(@reed_muller, 
      html: { class: 'form-inline' }) do |f| %>

  <%= f.text_field :r, placeholder: 'r' %>
  <%= f.text_field :m, placeholder: 'm' %>

  <%= f.submit "Vector Message", class: 'btn btn-primary' %>
  <%= f.submit "String Message", class: 'btn btn-primary' %>

<% end %>